    "version": "0.2.0",
    "configurations": [
        {
            "name": "service k8s with Kubernetes",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/service",
            "cwd": "${workspaceFolder}",
            "args": [],
            "env": {
                "CONFIG_PATH": "${workspaceFolder}/configs"
            },
            "preLaunchTask": "bridge-to-kubernetes.resource"
        },
        {
            "name": "service",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/service",
            "cwd": "${workspaceFolder}",
            "args": [],
            "env": {
                "CONFIG_PATH": "${workspaceFolder}/configs"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "service k8s",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/service",
            "cwd": "${workspaceFolder}",
            "args": [],
            "env": {
                "CONFIG_PATH": "${workspaceFolder}/configs"
            }
        },
        {
            "name": "db-tool-migrate-up",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/db-tool",
            "cwd": "${workspaceFolder}",
            "args": [
                "migrate",
                "up",
                "0"
            ],
            "env": {
                "CONFIG_PATH": "${workspaceFolder}/configs"
            }
        },
        {
            "name": "db-tool-jwk-refresh",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/db-tool",
            "cwd": "${workspaceFolder}",
            "args": ["jwk", "refresh"],
            "env": {
                "CONFIG_PATH": "${workspaceFolder}/configs",
            }
        },
        {
            "name": "db-tool-migrate-down",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/db-tool",
            "cwd": "${workspaceFolder}",
            "args": [
                "migrate",
                "down",
                "0"
            ],
            "env": {
                "CONFIG_PATH": "${workspaceFolder}/configs"
            }
        }
    ]
