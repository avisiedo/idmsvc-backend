@schema = http
@hostname = localhost
@contentType = application/json
@port = 8020
@host = {{hostname}}:{{port}}
@x-rh-identity-user = 
@x-rh-identity-system = 
# Generated by:
# ./tools/bin/xrhidgen \
#   -org-id 12345 \
#   -auth-type jwt-auth \
#   -account-number 11111 \
#   -employe-account-number 22222 \
#   service-account \
#     -client-id 91a229a3-ea92-4ec9-a926-8885d67e6a56 \
#     -username jdoe \
# | base64 -w0
@x-rh-identity-service-account = 
@basepath = /api/rbac/v1

### Get rbac authorization for idmsvc (check rbac mock)

# @name Authorize

# Request for localhost
#   ./test/scripts/local-rbac.sh
#
# Request for ephemeral:
#   ./test/scripts/ephe-rbac.sh
#
# Use {{x-rh-identity-service-account}} for service account instead
# of {{x-rh-identity-user}} if you need check that XRHID.
GET {{schema}}://{{host}}{{basepath}}/access?application=idmsvc
X-Rh-Identity: {{x-rh-identity-user}}
X-Rh-Insights-Request-Id: get_rbac_authorize
Content-Type: {{contentType}}
